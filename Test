<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Gear Selector</title>
    <script>
      // Define the base stats and gear as before

      const baseStats = {
        strength: 11,
        speed: 12,
        shooting: 14,
        passing: 10,
        technique: 16
      };

      const gear = [
        {
          name: 'Muscle Helmet',
          id: 1,
          type: 'head',
          stats: {
            strength: 2,
            technique: -2
          }
        },
        {
          name: 'Turbo Helmet',
          id: 2,
          type: 'head',
          stats: {
            speed: 2,
            technique: -2
          }
        },
        {
          name: 'Cannon Visor',
          id: 3,
          type: 'head',
          stats: {
            shooting: 2,
            technique: -2
          }
        }
      ];

      // Define the functions to calculate total stats and check if requirements are met

      function calculateTotalStats(stats, gear) {
        let totalStats = { ...stats };
        for (const item of gear) {
          if (item.stats) {
            for (const [stat, value] of Object.entries(item.stats)) {
              totalStats[stat] += value;
            }
          }
        }
        return totalStats;
      }

      function meetsRequirements(stats, minStats) {
        for (const [stat, value] of Object.entries(minStats)) {
          if (stats[stat] < value) {
            return false;
          }
        }
        return true;
      }

      // Define the function to be called when the button is clicked

      function selectGear() {
        // Get the desired final stats from the input fields
        const desiredStats = {
          strength: parseInt(document.getElementById('desired-strength').value),
          speed: parseInt(document.getElementById('desired-speed').value),
          shooting: parseInt(document.getElementById('desired-shooting').value),
          passing: parseInt(document.getElementById('desired-passing').value),
          technique: parseInt(document.getElementById('desired-technique').value)
        };

        // Find the gear that meets the minimum requirements
        let gearId = null;
        for (const item of gear) {
          const totalStats = calculateTotalStats(baseStats, [item]);
          if (meetsRequirements(totalStats, desiredStats)) {
            gearId = item.id;
            break;
          }
        }

        // Print the gear id that meets the requirements, or null if no gear is found
        console.log(gearId);
      }
    </script>
  </head>
  
</html>
